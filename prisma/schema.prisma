generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  user_id     String          @unique @default(uuid()) @db.Uuid()
  username    String          @db.VarChar(50)
  password    String          @db.VarChar(100)
  phoneNumber String          @db.VarChar(12)
  role        enum_Users_role
  createdAt   DateTime?       @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?       @updatedAt @db.Timestamptz(6)
  isDeleted   Boolean         @default(false)
  userJob     userJob[]
  teamUsers   teamUsers[]
}

model jobs {
  jobName   String    @id @unique @db.VarChar(40)
  createdAt DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)

  userJob userJob[]

  teamJobs teamJobs[]
}

model alertLogs {
  id        Int          @id @default(autoincrement())
  job       String       @db.VarChar(50)
  instance  String       @db.VarChar(50)
  method    enum_method?
  value     Int
  activeAt  DateTime
  createdAt DateTime?    @default(now()) @db.Timestamptz(6)
  updatedAt DateTime?    @updatedAt @db.Timestamptz(6)

}

model userJob {
  jobName  String @db.VarChar(30)
  user_id  String @db.Uuid()
  job      jobs   @relation(fields: [jobName], references: [jobName])
  usersRel users  @relation(fields: [user_id], references: [user_id])

  @@id([jobName, user_id])
}

model teams {
  teamName  String      @id @db.VarChar(50)
  teamUsers teamUsers[]

  teamJobs teamJobs[]
}

model teamUsers {
  teamName String @db.VarChar(20)
  user_id  String @db.Uuid()
  team     teams  @relation(fields: [teamName], references: [teamName])
  user     users  @relation(fields: [user_id], references: [user_id])

  @@id([user_id, teamName])
}

model teamJobs {
  teamName String @db.VarChar(20)
  jobName  String @db.VarChar(40)
  team     teams  @relation(fields: [teamName], references: [teamName])
  job      jobs   @relation(fields: [jobName], references: [jobName])


  @@id([teamName, jobName])
}

enum enum_method {
  PING
  HTTP_REQUEST
}

enum enum_Users_role {
  ROOT
  MONIA_ADMIN
  MONITORING_ADMIN
  CONTACT
}
